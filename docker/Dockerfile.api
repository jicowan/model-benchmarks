FROM golang:1.23-alpine AS build
RUN apk add --no-cache git
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /server ./cmd/server
RUN CGO_ENABLED=0 go build -o /pricingrefresh ./cmd/pricingrefresh

FROM alpine:3.20
RUN apk add --no-cache ca-certificates
COPY --from=build /server /server
COPY --from=build /pricingrefresh /pricingrefresh
EXPOSE 8080
ENTRYPOINT ["/server"]
